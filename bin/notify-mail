#!/bin/sh

/usr/bin/mbsync -a

for acc in /home/strajder/.local/share/mail/*; do
  for dir in $acc/*; do 
    if [ -d "$dir/new" ] && [ $(du "$dir/new" | grep -v ^4 | wc -l) -gt 0 ]; then
      MESSAGE="$(echo $dir | sed -e 's/.*\/\(.*\)/\1/') has new messages"
      /usr/bin/env DISPLAY=:0 /usr/bin/notify-send "$MESSAGE" 
    fi
  done
done

